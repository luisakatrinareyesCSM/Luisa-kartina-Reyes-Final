@page
@model Kat.Pages.Account.Login
@{
}

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="Post">
                    <h3>Login</h3>
                    <div class="form-group">
                        <label asp-for="View.EmailAddress">UserName</label>
                        <input type="email" class="form-control" placeholder="Enter user name" asp-for="View.EmailAddress">
                    </div>
                    <div class="form-group">
                        <label asp-for="View.Password">Password</label>
                        <input type="password" class="form-control" placeholder="Enter password" asp-for="View.Password">
                    </div>
                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
